<Window x:Class="ClusterMenu.View.JsonView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClusterMenu.View"
        xmlns:vm="clr-namespace:ClusterMenu.ViewModel"
        mc:Ignorable="d"
        Title="JsonView" Height="400" Width="400"
        Background="{StaticResource ColorBackground}"
        >
    <Grid>
        <TextBox Background="{StaticResource ColorBackgroundLighter}" 
                   Foreground="white" Margin="10" Padding="10" Text="{Binding Json}"
                   VerticalScrollBarVisibility="Auto" >
        </TextBox>
    </Grid>
</Window>
